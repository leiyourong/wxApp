@keyframes rotate {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}

.container {
  text-align: center;
}

.spinner {
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
  display: inline-block;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  border-right: 0;
  border-bottom: 0;
  animation: rotate 0.8s infinite linear;
}

.large {
  width: 70rpx;
  height: 70rpx;
}

.small {
  width: 70rpx;
  height: 70rpx;
}